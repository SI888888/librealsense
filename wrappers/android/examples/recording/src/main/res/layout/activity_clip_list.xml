<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_clips_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clips List"
        android:textSize="24sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#EEEEEE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 返回按钮 -->
    <Button
        android:id="@+id/btn_return_cliptotask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Clips 列表 -->
    <ListView
        android:id="@+id/clip_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_clips_list_title"
        app:layout_constraintBottom_toTopOf="@id/record_clip_fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />

    <!-- 添加 Clip 的按钮 -->
    <Button
        android:id="@+id/record_clip_fab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Clip"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/rect_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>


